<h1>Chief Key.f</h1>

<h2>Sign In</h2>

<%= form_for @user, url: session_path, method: :post do |f| %>
  <%= f.label :chief_username %>
  <%= f.text_field :chief_username %>

  <%= f.label :chief_email %>
  <%= f.password_field :chief_email %>

  <%= f.label :chief_password %>
  <%= f.password_field :chief_password %>

  <%= f.submit "Submit" %>
<% end %>

<nav>
  <% if @current_user %>
    <%= link_to "Welcome, #{@current_user.username}!", user_path(@current_user) %>
    <%= link_to "Sign Out", session_path, method: :delete %>
  <% else %>
    <%= link_to "Sign Up", new_user_path %>
    <%= link_to "Sign In", new_session_path %>
  <% end %>
</nav>
