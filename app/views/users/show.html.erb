<h1>Chief User Information</h1>
<%= link_to 'Edit', edit_user_path(@user) %>

<p>
  <strong>Username:</strong>
  <%= @user.chief_username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.chief_email %>
</p>

<p>
  <strong>Password:</strong>
  <%= @user.chief_password %>
</p>



<td><%= link_to 'Accounts', user_accounts_path(@user) %></td>

<h2>Accounts</h2>
<% @user.accounts.each do |account| %>
  <p>
    <strong>Websites:</strong>
    <%= account.website %>
  </p>


<% end %>



<%= link_to 'Return to All Users', users_path %>
<%= link_to 'Destroy', user_path,
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
